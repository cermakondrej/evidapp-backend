{
  "functions": {
    "api/index.php": {
      "runtime": "now-php@0.0.9"
    }
  },
  "routes": [
    { "src": "/(.*)",  "dest": "/api/index.php" }
  ],
  "env": {
    "PROJECT_NAME": "evidapp-backend",
    "APP_ENV": "dev",
    "APP_SECRET": "@evidapp-backend.app-secret",
    "DATABASE_URL": "@evidapp-backend.db-url",
    "MAILER_URL": "null://localhost",
    "JWT_SECRET_KEY": "@evidapp-backend.jwt-private-key",
    "JWT_PUBLIC_KEY": "@evidapp-backend.jwt-public-key",
    "JWT_PASSPHRASE": "@evidapp-backend.jwt-passphrase",
    "CORS_ALLOW_ORIGIN": "^https?://localhost(:[0-9]+)?$"
  }
}