{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.3",
        "beberlei/assert": "^3.2",
        "broadway/broadway": "^2.1",
        "broadway/broadway-bundle": "^0.4.2",
        "broadway/event-store-dbal": "^0.3",
        "elasticsearch/elasticsearch": "^6.0",
        "lexik/jwt-authentication-bundle": "^2.6",
        "gesdinet/jwt-refresh-token-bundle": "~0.1",
        "jms/serializer-bundle": "^3.5",
        "nelmio/cors-bundle": "^1.5",
        "php-amqplib/rabbitmq-bundle": "^1.14",
        "ramsey/uuid": "^3.9",
        "ramsey/uuid-doctrine": "^1.6",
        "sensio/framework-extra-bundle": "^5.1",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/messenger": "4.3.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "^1.0",
        "symfony/property-info": "4.3.*",
        "symfony/security-bundle": "4.3.*",
        "symfony/validator": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^6.3",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "ext-bcmath": "*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^0.11.19",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "3.*",
        "symfony/debug-pack": "*",
        "symfony/maker-bundle": "^1.14",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/profiler-pack": "*",
        "symfony/twig-bundle": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "EvidApp\\Shared\\": "src/Component/Shared/src/",
            "EvidApp\\Employment\\": "src/Component/Employment/src/",
            "EvidApp\\Export\\": "src/Component/Export/src/",
            "EvidApp\\User\\": "src/Component/User/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs --cache --parallel=2  --extensions=php --colors --encoding=utf-8 --exclude=Generic.Commenting.Todo -sp bin/console src/ tests/",
        "csf": "./vendor/bin/phpcbf --extensions=php --colors -p bin/console src/ tests/",
        "phpstan": "./vendor/bin/phpstan analyse --level=7 src/ tests/",
        "md": "./vendor/bin/phpmd src/ html cleancode --reportfile ./var/phpmd.html",
        "tests": "bin/phpunit tests/",
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
